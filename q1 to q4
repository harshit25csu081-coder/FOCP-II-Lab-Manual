question 3
#include<iostream>
using namespace std;
int main(){
int choice;
float c, f;
cout<<"enter the chioce:";
cin>>choice;
if (choice ==1){
cout<<"enter the celsius";
cin>>c;
f=(c*9/5)+32;
cout<<" fahreneit="<<f<<endl;}
else if(choice==2){
    cout<<"enter the fahrenheit";
    cin>>f;
    c=(f-32)*5/9;
    cout<<"celcius="<<c<<endl;
}
else{
    cout<<"invalid choice";
}
return 0;
}


